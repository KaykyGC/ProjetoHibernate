<!DOCTYPE hibernate-configuration PUBLIC
	"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
	
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/empresa2?createDatabaseIfNotExist=true</property>
	    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
	    <property name="hibernate.dialect">org.hibernate.dialect.MySQL5InnoDBDialect</property>
	    <property name="hibernate.connection.username">aluno</property>
	    <property name="hibernate.connection.password">aluno</property>
	      
	    <property name="hibernate.show_sql">true</property>
	    <property name="hibernate.format_sql">true</property>
	    <property name="hibernate.hbm2ddl.auto">create</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
	    
        <mapping class="modelo.ClienteHibernate" />
        <mapping class="modelo.CarroHibernate" />
            	
	</session-factory>
</hibernate-configuration>